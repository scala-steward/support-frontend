{
  "name": "support-frontend",
  "version": "1.0.0",
  "description": "Frontend for the supporter platform.",
  "scripts": {
    "clean": "echo 'Cleaning Public Folder' && rimraf public/compiled-assets",
    "validate": "echo 'Validating JS' && npm-run-all 'lint --fix' flow && yarn orphans",
    "lint:check": "eslint ./assets --ext .ts --ext .tsx",
    "lint:fix": "yarn lint:check --fix",
    "build-dev": "webpack --config webpack.dev.js",
    "build-ssr": "webpack --config webpack.ssr.js && node scripts/ssrScript.js",
    "build-prod": "npm-run-all clean test storybook-static 'webpack --config webpack.prod.js'",
    "build-github-action": "npm-run-all clean 'webpack --config webpack.prod.js --env.ci=github'",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server --config webpack.dev.js --port 9211 --public support.thegulocal.com --disable-host-check",
    "devrun": "npm-run-all clean webpack-dev-server",
    "test": "NODE_ENV=test echo 'Running JS tests' && jest",
    "test-watch": "NODE_ENV=test echo 'Running JS tests in watch mode' && jest --watch",
    "paparazzi": "paparazzi && open ./paparazzi",
    "prepare": "cd .. && husky install ./support-frontend/.husky",
    "prettier:check": "prettier --check ./assets",
    "prettier:fix": "prettier --write ./assets",
    "storybook": "start-storybook --ci -p 9001 -c .storybook -s .storybook/static",
    "storybook-static": "build-storybook -c .storybook -o storybook-static  -s .storybook/static",
    "cache-ssr": "node scripts/ssrScript.js",
    "jest-update-snapshot": "echo 'Updating JS tests' && jest -u",
    "orphans": "echo 'Checking for orphan modules' && node scripts/orphans.js",
    "check-images": "echo 'Purging unused images' && node scripts/gridImages.js",
    "ts-errors": "node scripts/ts-log-errors.js"
  },
  "browserslist": [
    "Chrome >= 49",
    "ChromeAndroid >= 49",
    "Safari >= 8",
    "ios_saf >= 8",
    "IE >= 11",
    "Edge >= 14",
    "Firefox >= 48",
    "FirefoxAndroid > 48",
    "Samsung >= 4",
    "Opera >= 54"
  ],
  "jest": {
    "transform": {
      ".+\\.(js|jsx|ts|tsx)$": "./node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@guardian)",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "es6",
      "jsx",
      "tsx"
    ],
    "modulePaths": [
      "assets"
    ],
    "modulePathIgnorePatterns": [
      "target",
      "assets copy"
    ],
    "moduleNameMapper": {
      "ophan(.*)": "<rootDir>/node_modules/ophan-tracker-js/build/ophan.support",
      "\\.(css|less|sass|scss)$": "<rootDir>/assets/__mocks__/styleMock.ts",
      "\\.(svg|png|jpg)$": "<rootDir>/assets/__mocks__/imageMock.ts"
    },
    "setupFilesAfterEnv": [
      "./jestSetup"
    ],
    "verbose": true,
    "testEnvironment": "./jestEnvironment"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/support-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/guardian/support-frontend/issues"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/cache": "^10.0.29",
    "@emotion/core": "^10.0.35",
    "@emotion/react": "^11.1.5",
    "@emotion/serialize": "^0.11.16",
    "@guardian/consent-management-platform": "^6.7.4",
    "@guardian/pasteup": "1.0.0-alpha.7",
    "@guardian/src-accordion": "^3.2.0",
    "@guardian/src-button": "^2.8.2",
    "@guardian/src-checkbox": "^2.7.1",
    "@guardian/src-choice-card": "^2.0.0",
    "@guardian/src-foundations": "^2.3.0",
    "@guardian/src-icons": "^2.0.0",
    "@guardian/src-layout": "^2.8.1",
    "@guardian/src-link": "^2.2.0",
    "@guardian/src-radio": "^2.5.0",
    "@guardian/src-select": "^2.7.1",
    "@guardian/src-svgs": "^2.0.0",
    "@guardian/src-text-area": "^2.5.0",
    "@guardian/src-text-input": "^2.1.0",
    "@guardian/src-user-feedback": "^2.7.1",
    "@guardian/src-utilities": "^0.14.0",
    "@reduxjs/toolkit": "^1.7.1",
    "@sentry/browser": "^5.4.0",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.8.0",
    "@types/dompurify": "^2.3.1",
    "@types/seedrandom": "^3.0.1",
    "@types/uuid": "^8.3.1",
