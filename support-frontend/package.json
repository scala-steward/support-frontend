    "lodash.debounce": "^4.0.6",
    "ophan-tracker-js": "^1.3.23",
    "react-day-picker": "^7.4.8",
    "react-is": "^17.0.2",
    "react-redux": "^5.1.1",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "seedrandom": "^3.0.5",
    "snarkdown": "^2.0.0",
    "utility-types": "^3.10.0",
